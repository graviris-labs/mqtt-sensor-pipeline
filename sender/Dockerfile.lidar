FROM python:3.9-slim

WORKDIR /app

# Install dependencies
COPY sender/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install additional lidar dependencies
RUN pip install --no-cache-dir rplidar-py

# Copy the sender code
COPY sender/ .
# Copy the examples code
COPY examples/ ./examples/

# Run the lidar integration script
CMD ["python3", "examples/lidar_integration.py"]
